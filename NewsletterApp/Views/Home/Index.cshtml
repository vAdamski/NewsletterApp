@model NewsletterApp.Shared.Models.ViewModels.NewsLettersListVm

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <h1>News Letters List</h1>
    <div class="row">
        <div class="col-12">
            <table class="table table-striped text-center">
                <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Subscribe</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.NewsLetterDtos)
                {
                    <tr>
                        <td><a class="nav-link text-dark">@item.Name</a></td>
                        <td><a class="btn btn-warning" href="@Url.Action("Subscribe", "NewsLetter", new { id = item.Id })">Subscribe</a></td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>